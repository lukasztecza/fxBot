{
    "rendering_middleware": {
        "class": "TinyApp\\Model\\Middleware\\RenderingMiddleware",
        "inject": [
            "%routed_controller%",
            "%routed_action%"
        ]
    },
    "sample_controller": {
        "class": "TinyApp\\Controller\\SampleController",
        "inject": [
            "sample text",
            "@sample_service@"
        ]
    },
    "sample_service": {
        "class": "TinyApp\\Model\\Service\\SampleService",
        "inject": [
            "@sample_repository@"
        ]
    },
    "sample_repository": {
        "class": "TinyApp\\Model\\Repository\\SampleRepository",
        "inject": [
            "@write_connection@"
        ]
    },
    "write_connection": {
        "class": "TinyApp\\Model\\Repository\\DatabaseConnection",
        "inject": [
            "%database_engine%",
            "%database_host%",
            "%database_name%",
            "%database_user%",
            "%database_password%"
        ]
    }

}
