{
    "rendering_middleware": {
        "class": "TinyApp\\Model\\Middleware\\RenderingMiddleware",
        "inject": [
            "@securityMiddleware"
        ]
    },
    "securityMiddleware": {
        "class": "TinyApp\\Model\\Middleware\\SecurityMiddleware",
        "inject": [
            "%security_list%",
            "%routed_controller%",
            "%routed_action%"
        ]
    },
    "sample_controller": {
        "class": "TinyApp\\Controller\\SampleController",
        "inject": [
            "@sample_service@",
            "@validator_factory"
        ]
    },
    "api_controller": {
            "class": "TinyApp\\Controller\\ApiController",
        "inject": [
            "@sample_service@",
            "@validator_factory"
        ]
    },
    "sample_service": {
        "class": "TinyApp\\Model\\Service\\SampleService",
        "inject": [
            "@sample_repository@"
        ]
    },
    "sample_repository": {
        "class": "TinyApp\\Model\\Repository\\SampleRepository",
        "inject": [
            "@write_connection@"
        ]
    },
    "write_connection": {
        "class": "TinyApp\\Model\\Repository\\DatabaseConnection",
        "inject": [
            "%database_engine%",
            "%database_host%",
            "%database_name%",
            "%database_user%",
            "%database_password%"
        ]
    },
    "validator_factory": {
        "class": "TinyApp\\Model\\Validator\\ValidatorFactory"
    }
}
