{
    "user_controller": {
        "class": "TinyApp\\Controller\\UserController",
        "inject": [
            "some text",
            1234,
            "@user_service@"
        ]
    },
    "rendering_middleware": {
        "class": "TinyApp\\Model\\Middleware\\RenderingMiddleware",
        "inject": [
            "%routed_controller%",
            "%routed_action%"
        ]
    },
    "user_service": {
        "class": "TinyApp\\Model\\Service\\UserService",
        "inject": [
            "@user_repository@"
        ]
    },
    "user_repository": {
        "class": "TinyApp\\Model\\Repository\\UserRepository",
        "inject": [
            "@read_connection@",
            "@write_connection@"
        ]
    },
    "read_connection": {
        "class": "TinyApp\\Model\\Repository\\DatabaseConnection",
        "inject": [
            "%database_engine%",
            "%database_host%",
            "%database_name%",
            "%database_user%",
            "%database_password%"
        ]
    },
    "write_connection": {
        "class": "TinyApp\\Model\\Repository\\DatabaseConnection",
        "inject": [
            "%database_engine%",
            "%database_host%",
            "%database_name%",
            "%database_user%",
            "%database_password%"
        ]
    }

}
