{
    "defaultContentType": "text/html",
    "applicationStartingPoint": "outputMiddleware",
    "assetsVersion": "2",

    "securityList": [
        {
            "route": "/private/upload/{directory}/{file}",
            "methods": ["GET"],
            "allow": ["ROLE_USER"]
        },
        {
            "route": "/file/add",
            "allow": ["ROLE_USER"]
        },
        {
            "route": "/file/list/{type}/{page}",
            "methods": ["POST"],
            "allow": ["ROLE_USER"]
        }
    ],

    "cacheList": [
        {
            "route": "/",
            "time": "10"
        }
    ],

    "priceInstruments": [
        "USD_CAD",
        "EUR_USD",
        "EUR_CAD"
    ],

    "clientConfiguration": {
        "oandaClient": {
            "uri": "%oandaApiUri%",
            "class": "TinyApp\\Model\\Client\\OandaClient",
            "options": {
                "apiKey": "%oandaApiKey%"
            },
            "middlewares": [
                {
                    "class": "HttpClient\\Middleware\\JsonMiddleware",
                    "options": {
                        "encodeRequest": true
                    }
                }
            ]
        },
        "forexFactoryClient": {
            "uri": "%forexFactoryUri%",
            "class": "TinyApp\\Model\\Client\\ForexFactoryClient"
        }
    },

    "selectedStrategy": "TinyApp\\Model\\Strategy\\RigidLongAverageTrendingDeviationStrategy"
}
