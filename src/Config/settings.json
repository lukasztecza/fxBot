{
    "defaultContentType": "text/html",
    "applicationStartingPoint": "outputMiddleware",
    "assetsVersion": "2",

    "securityList": [
        {
            "route": "/private/upload/{directory}/{file}",
            "methods": ["GET"],
            "allow": ["ROLE_USER"]
        },
        {
            "route": "/files/add",
            "allow": ["ROLE_USER"]
        },
        {
            "route": "/files/list/{type}/{page}",
            "methods": ["POST"],
            "allow": ["ROLE_USER"]
        }
    ],

    "cacheList": [
        {
            "route": "/",
            "time": "10"
        }
    ],

    "priceInstruments": [
        "AUD_USD",
        "AUD_CAD",
        "AUD_JPY",
        "AUD_CHF",
        "CAD_CHF",
        "CAD_JPY",
        "CHF_JPY",
        "EUR_GBP",
        "EUR_USD",
        "EUR_JPY",
        "EUR_CHF",
        "EUR_AUD",
        "EUR_CAD",
        "GBP_JPY",
        "GBP_USD",
        "GBP_CAD",
        "GBP_CHF",
        "GBP_AUD",
        "USD_JPY",
        "USD_CAD",
        "USD_CHF"
    ],

    "clientConfiguration": {
        "oandaClient": {
            "uri": "%oandaApiUri%",
            "class": "TinyApp\\Model\\Client\\OandaClient",
            "options": {
                "apiKey": "%oandaApiKey%"
            },
            "middlewares": [
                {
                    "class": "HttpClient\\Middleware\\JsonMiddleware",
                    "options": {
                        "encodeRequest": true
                    }
                }
            ]
        }
    }
}
