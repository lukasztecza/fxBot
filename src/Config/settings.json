{
    "defaultContentType": "text/html",
    "applicationStartingPoint": "outputMiddleware",
    "assetsVersion": "2",

    "securityList": [
        {
            "route": "/restricted/*",
            "methods": ["GET"],
            "allow": ["ROLE_USER"]
        },
        {
            "route": "/private/upload/{directory}/{file}",
            "methods": ["GET"],
            "allow": ["ROLE_USER"]
        }
    ],

    "cacheList": [
        {
            "route": "/",
            "time": "1"
        }
    ],

    "itemsFixtures": ["first dummy item", "second dummy item", "third dummy item"],

    "clientConfiguration": {
        "oandaClient": {
            "uri": "%oandaApiUri%",
            "class": "TinyApp\\Model\\Client\\OandaClient",
            "options": {
                "apiKey": "%oandaApiKey%"
            },
            "middlewares": [
                {
                    "class": "HttpClient\\Middleware\\JsonMiddleware",
                    "options": {
                        "encodeRequest": false
                    }
                }
            ]
        }
    }
}
