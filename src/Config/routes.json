    {
        "path": "/login",
        "controller": "authenticationController",
        "methods": ["GET", "POST"],
        "action": "login"
    },
    {
        "path": "/logout",
        "controller": "authenticationController",
        "methods": ["GET"],
        "action": "logout"
    }
]
