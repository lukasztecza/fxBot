[
    {
        "path": "/",
        "methods": ["GET"],
        "controller": "forexController",
        "action": "home"
    },
    {
        "path": "/login",
        "controller": "authenticationController",
        "action": "login"
    },
    {
        "path": "/logout",
        "controller": "authenticationController",
        "action": "logout"
    },
    {
        "path": "/files/add",
        "methods": ["GET", "POST"],
        "controller": "filesController",
        "action": "upload"
    },
    {
        "path": "/files",
        "methods": ["GET", "POST"],
        "controller": "filesController",
        "action": "list"
    },
    {
        "path": "/files/list/{type}/{page}",
        "methods": ["GET", "POST"],
        "requirements": {"type": "\\d+", "page": "\\d+"},
        "controller": "filesController",
        "action": "listPaginated"
    },
    {
        "path": "/private/upload/{directory}/{file}",
        "methods": ["GET"],
        "requirements": {"directory": "(images|files)", "file": "[a-z0-9]{1,}\\.[a-z]{3,4}"},
        "controller": "privateContentController",
        "action": "serve"
    }
]
