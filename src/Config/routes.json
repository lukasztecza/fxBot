[
    {
        "path": "/",
        "methods": ["GET"],
        "controller": "forexController",
        "action": "home"
    },
    {
        "path": "/stats",
        "methods": ["GET"],
        "controller": "forexController",
        "action": "stats"
    },
    {
        "path": "/compare",
        "methods": ["GET", "POST"],
        "controller": "forexController",
