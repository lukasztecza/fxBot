[
    {
        "path": "/",
        "methods": ["GET"],
        "controller": "itemsController",
        "action": "home"
    },
    {
        "path": "/restricted",
        "methods": ["GET"],
        "controller": "restrictedController",
        "action": "restricted2"
    },
    {
        "path": "/restricted/{code}",
