    {
        "path": "/files",
        "methods": ["GET", "POST"],
        "controller": "filesController",
        "action": "list"
    },
    {
        "path": "/files/list/{type}/{page}",
        "methods": ["GET", "POST"],
        "requirements": {"type": "\\d+", "page": "\\d+"},
        "controller": "filesController",
        "action": "listPaginated"
    },
    {
        "path": "/api/items",
        "methods": ["GET"],
        "controller": "apiController",
        "action": "cget"
    },
    {
        "path": "/api/items",
        "methods": ["POST"],
        "controller": "apiController",
        "action": "post"
    },
    {
        "path": "/api/items/{id}",
        "methods": ["GET"],
        "requirements": {"id": "\\d+"},
        "controller": "apiController",
        "action": "get"
    },
    {
        "path": "/api/items/{id}",
        "methods": ["PUT"],
        "requirements": {"id": "\\d+"},
        "controller": "apiController",
        "action": "put"
    },
    {
        "path": "/api/items/{id}",
        "methods": ["DELETE"],
        "requirements": {"id": "\\d+"},
        "controller": "apiController",
        "action": "delete"
    },
    {
        "path": "/private/{directory}/{file}",
        "methods": ["GET"],
        "requirements": {"directory": "(images|files)", "file": "[a-z0-9]{1,}\\.[a-z]{3,4}"},
        "controller": "privateContentController",
        "action": "serve"
    }
]
