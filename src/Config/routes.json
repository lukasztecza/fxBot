        "action": "list"
    },
    {
        "path": "/items/list/{page}",
        "methods": ["GET", "POST"],
        "requirements": {"page": "\\d+"},
        "controller": "itemsController",
        "action": "list"
    },
    {
        "path": "/items/add",
        "methods": ["GET", "POST"],
        "controller": "itemsController",
        "action": "add"
    },
    {
        "path": "/items/{id}",
        "methods": ["GET"],
        "requirements": {"id": "\\d+"},
