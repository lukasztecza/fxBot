    {
        "path": "/items/{id}/edit",
        "methods": ["GET", "POST"],
        "requirements": {"id": "\\d+"},
        "controller": "itemsController",
        "action": "edit"
    },
    {
        "path": "/files/add",
        "methods": ["GET", "POST"],
        "controller": "filesController",
        "action": "upload"
